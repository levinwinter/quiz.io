doctype html
html
    head
        include head
        script(src='/public/js/manage.js')
    body
        include hero
        section.section
            .container
                h1.title Manage
                h2.subtitle All the settings to customize the game on the fly.
                label.label Spiel 1: Liedermemory
                .field#1
                    .buttons.has-addons
                        span.button.schacht Schacht
                        span.button.x X
                        span.button.lehrer Lehrer
                label.label Spiel 2: Activity
                .field#2
                    .buttons.has-addons
                        span.button.schacht Schacht
                        span.button.x X
                        span.button.lehrer Lehrer
                label.label Spiel 3: Blamieren oder Kassieren
                .field#3
                    .buttons.has-addons
                        span.button.schacht Schacht
                        span.button.x X
                        span.button.lehrer Lehrer
                label.label Spiel 4: Becherfu√üball
                .field#4
