                        span.button.x X
                        span.button.lehrer Lehrer
                label.label Spiel 8: Wasserbombenhelm
                .field#8
                    .buttons.has-addons
                        span.button.schacht Schacht
                        span.button.x X
                        span.button.lehrer Lehrer
                label.label Timer
                .field.has-addons
                    .control
                        input.input.has-text-right#input-timerDuration(type='text')
                    .control
                        a.button.is-static seconds
                label.label Reset Buzzer
                .field
                    a.button.is-info#reset
                        span.icon
                            i.fas.fa-times
                        span Reactivate
                label.label Sandbox
                .field
                    a.button.is-info#sandbox
                        span.icon
                            i.fas.fa-times
                        span fire!
                label.label Live View
                .select.is-multiple
                    select(multiple, size='2')#live-view
                        option(value='overlay') Overlay
                        option(value='status') Status
                label.label Score - Schacht
                .field.has-addons
                    .control
                        input.input.has-text-right#input-scoreSchacht(type='text')
                    .control
                        a.button.is-static points
        include footer